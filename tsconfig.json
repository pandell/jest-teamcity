{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
