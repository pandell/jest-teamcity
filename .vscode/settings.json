{
  "typescript.tsdk": "node_modules/typescript/lib",

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    ".eslintcache": true
  },

  "search.exclude": {
    "dist": true,
    "node_modules": true
  },

  // do not pollute tasks with auto-detect
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",

  // eslint extension settings
  "eslint.packageManager": "yarn",
  "eslint.validate": ["javascript", "typescript"],

  // spell-checking extension settings
  "cSpell.words": [
    "Maechler",
    "mockdata",
    "pandell",
    "teamcity"
  ]
}
